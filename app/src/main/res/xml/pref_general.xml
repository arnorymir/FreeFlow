<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="prefSound"
        android:title="Sound" >
    </CheckBoxPreference>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="prefVibration"
        android:title="Vibration" >
    </CheckBoxPreference>

    <ListPreference
        android:defaultValue="Rainbow"
        android:key="prefColorScheme"
        android:title="Color Scheme"
        android:entries="@array/colorSchemes"
        android:entryValues="@array/colorSchemeValues"/>

    <Preference android:title="Unsolve puzzles"
        android:key="clearButton"
        android:summary="Mark all the puzzles as unsolved"/>
</PreferenceScreen>